{% extends 'base.html.twig' %}

{% block title %}Hollyday - Your Vacation Companion
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-sandy-beige/10 flex flex-col">
		<div class="container mx-auto px-4 py-16 flex-grow">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-5xl font-bold mb-6 text-sunset-orange">Welcome to Hollyday</h2>
				<div class="card mb-8">
					<p class="text-xl text-gray-700 mb-6">
						Plan, explore, and cherish your perfect vacation moments with Hollyday.
					</p>
				</div>


			</div>
			<div class="max-w-3xl mx-auto bg-white rounded-lg shadow-lg p-12">
				<h2 class="text-3xl font-bold mb-6 text-sunset-orange">
					Plan Your Trip
				</h2>

				{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
				{{ form_errors(form) }}
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div class="form-group">
							{{ form_label(form.startDate, 'Start Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
							<div class="mt-1">
								{{ form_widget(form.startDate, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-sunset-orange focus:ring focus:ring-sunset-orange/50'}}) }}
								{{ form_errors(form.startDate) }}
							</div>
						</div>

						<div class="form-group">
							{{ form_label(form.endDate, 'End Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
							<div class="mt-1">
								{{ form_widget(form.endDate, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-sunset-orange focus:ring focus:ring-sunset-orange/50'}}) }}
								{{ form_errors(form.endDate) }}
							</div>
						</div>
					</div>

					<div class="form-group mt-6">
						{{ form_label(form.reason, 'Trip Reason', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
						<div class="mt-1">
							{{ form_widget(form.reason, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-sunset-orange focus:ring focus:ring-sunset-orange/50 h-24', 'placeholder': 'Tell us about your dream vacation...'}}) }}
							{{ form_errors(form.reason) }}
						</div>
					</div>

					

					<div class="mt-8">
						{{ form_widget(form.submit, {'attr': {'class': 'w-full bg-sunset-orange text-white py-3 px-4 rounded-md hover:bg-sunset-orange/90 transition-colors duration-300 ease-in-out'}}) }}
					</div>

					{{ form_rest(form) }}
			</div>
		</div>
		<div class="container mx-auto px-4 py-16 flex-grow">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl font-bold mb-6 text-sunset-orange">
					Leave Requests
				</h2>
				<table class="min-w-full bg-white rounded-lg shadow-lg">
					<thead>
						<tr>
							<th class="py-2 px-4 bg-sunset-orange text-white">Start Date</th>
							<th class="py-2 px-4 bg-sunset-orange text-white">End Date</th>
							<th class="py-2 px-4 bg-sunset-orange text-white">Reason</th>	
							<th class="py-2 px-4 bg-sunset-orange text-white">Status</th>
						</tr>
					</thead>
					<tbody>
						{% for leaveRequest in leaveRequests %}
							<tr>
								<td class="py-2 px-4">{{ leaveRequest.startDate|date('Y-m-d') }}</td>
								<td class="py-2 px-4">{{ leaveRequest.endDate|date('Y-m-d') }}</td>
								<td class="py-2 px-4">{{ leaveRequest.reason }}</td>
								<td class="py-2 px-4">{{ leaveRequest.status.value }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>


		<footer class="bg-sunset-orange/10 py-6 text-center">
			<p class="text-gray-600">
				Â©
				{{ "now"|date("Y") }}
				Hollyday. All rights reserved.
			</p>
		</footer>
	</div>
{% endblock %}
