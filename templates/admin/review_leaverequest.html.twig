{% extends 'base.html.twig' %}

{% block title %}Revue des vacances{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 mt-10">
        <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md">
            <div class="p-8 text-center">
                <div class="mb-6">
                   <i class="fa-solid fa-plane"></i>
                </div>
                    
                <h2 class="text-2xl font-bold mb-6 text-gray-800">Demande de congés</h2>
                
                <div class="mb-8">
                    <div class="bg-blue-50 border border-blue-100 rounded-lg p-6">
                        <div>
                            <span class="text-gray-600 text-sm">Statut:</span>
                            <p class="mt-1">
                                <span class="px-4 py-1.5 rounded-full text-sm font-medium
                                    {% if leaveRequest.status.value == 'accept' %}
                                        bg-green-100 text-green-800
                                    {% elseif leaveRequest.status.value == 'reject' %}
                                        bg-red-100 text-red-800
                                    {% else %}
                                        bg-gray-100 text-gray-800
                                    {% endif %}">
                                    {{ leaveRequest.status.value }}
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mt-8">
                    <a href="{{ path('homepage') }}" 
                       class="inline-flex items-center justify-center w-full md:w-2/3 px-6 py-3 text-base font-medium text-sunset-orange bg-white border-2 border-sunset-orange rounded-lg hover:bg-sunset-orange hover:text-white transition-colors duration-200">
                        <i class="fas fa-home mr-2"></i>
                        Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}